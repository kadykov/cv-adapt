---
import AuthLayout from "../layouts/AuthLayout.astro";
import { RegisterFormWithProvider } from "../features/auth/components/RegisterFormWithProvider";
---

<AuthLayout title="Register - CV Adapt">
  <div class="min-h-screen flex flex-col justify-center">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold">Create Account</h1>
      <p class="text-base-content/70">Join CV Adapt to create professional CVs</p>
    </div>

    <RegisterFormWithProvider client:load />

    <div class="text-center mt-6">
      <p class="text-base-content/70">
        Already have an account?{" "}
        <a href="/login" class="text-primary hover:underline">Sign in</a>
      </p>
    </div>
  </div>
</AuthLayout>
