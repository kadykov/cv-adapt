---
import BaseLayout from '../layouts/BaseLayout.astro';
import { RegisterFormWithAuth } from '../features/auth/components/RegisterFormWithAuth';
---

<BaseLayout title="Register">
  <div class="min-h-screen flex flex-col justify-center">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold">Create an Account</h1>
      <p class="mt-2 text-gray-600">Join us to get started</p>
    </div>
    <RegisterFormWithAuth client:load />
    <div class="text-center mt-4">
      <p>Already have an account? <a href="/login" class="text-primary hover:underline">Sign in</a></p>
    </div>
  </div>
</BaseLayout>
